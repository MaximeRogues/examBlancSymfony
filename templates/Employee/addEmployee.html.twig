{% extends 'base.html.twig' %}

{% block title %}Hello AddEmployeeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <a href="{{path('employee') }}" class="btn btn-warning">Retour à la liste des employés</a>
    <br><br>

    <h2>Ajouter un employé</h2>
    <br>
    {{ form_start(form) }}
    {{ form_row(form.firstName, {
        label: 'Prénom'
    }) }}
    {{ form_row(form.lastName, {
        label: 'Nom de famille'
    }) }}
    {{ form_row(form.email) }}

    {# {{ form_row(form.password, {
        label: 'Mot de passe'
    }) }} #}
    {{ form_row(form.sector, {
        label: 'Secteur'
    }) }}
    {{ form_row(form.picture, {
        label: 'Photo '
    }) }}
    {{ form_row(form.Ajouter) }}

    {% if errors %}
        <ul>
            {% for error in errors %}
                <li>
                    {{error.message}}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    
{{ form_end(form) }}    

</div>
{% endblock %}
